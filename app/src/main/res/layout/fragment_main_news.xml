<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Tiêu đề: Quan chức Nga nói Phó tư lệnh Hạm đội Biển Đen tử trận ở Ukraine"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="3"
        android:text="Nghị sĩ và thống đốc Nga xác nhận đại tá Andrey Paliy, phó tư lệnh Hạm đội Biển Đen, thiệt mạng trong giao tranh gần thành phố Mariupol, đông nam Ukraine."
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/news_props"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="2 giờ trước"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="14"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/news_src"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="false"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_logo_thanhnien" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/news_props"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>
